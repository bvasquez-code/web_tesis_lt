# Define la ruta de la carpeta donde se encuentran los archivos
$ruta = "G:\SRC\TNSNAME\Nueva carpeta\TRN_DESCARGAS"

# Obtiene todos los archivos dentro de la carpeta y sus subcarpetas, incluyendo archivos ocultos
Get-ChildItem -Path $ruta -File -Recurse -Force | ForEach-Object {

    # Almacena el nombre base (sin extensión) y la extensión del archivo
    $nombreBase = $_.BaseName
    $extension = $_.Extension

    # Reemplaza guiones bajos y guiones por espacios en el nombre base
    $nombreBase = $nombreBase -Replace '[_-]', ' '

    # Reemplaza los puntos por espacios en el nombre base
    $nombreBase = $nombreBase -Replace '\.', ' '

    # Construye el nuevo nombre del archivo
    $nuevoNombre = "$nombreBase$extension"

    # Renombra el archivo
    Rename-Item -Path $_.FullName -NewName $nuevoNombre
}


# Define la ruta de la carpeta donde se encuentran los archivos
$ruta = "G:\SRC\TNSNAME\Nueva carpeta\TRN_DESCARGAS"
# Define el texto a buscar y el texto de reemplazo
$textoAReemplazar = "emilywillis"
$nuevoTexto = "Emily Willis"
# Obtiene todos los archivos dentro de la carpeta y sus subcarpetas, incluyendo archivos ocultos
Get-ChildItem -Path $ruta -File -Recurse -Force | ForEach-Object {
    # Verifica si el nombre del archivo contiene el texto a reemplazar
    if ($_.Name -like "*$textoAReemplazar*") {
        # Reemplaza el texto en el nombre del archivo
        $nuevoNombre = $_.Name -Replace $textoAReemplazar, $nuevoTexto
        # Construye la ruta completa para el nuevo nombre
        $nuevaRuta = Join-Path -Path $_.DirectoryName -ChildPath $nuevoNombre
        # Verifica si ya existe un archivo con el nuevo nombre
        if (-not (Test-Path -Path $nuevaRuta)) {
            # Renombra el archivo
            Rename-Item -Path $_.FullName -NewName $nuevoNombre
        } else {
            # Si el archivo ya existe, muestra un mensaje
            Write-Host "El archivo '$nuevoNombre' ya existe en la carpeta '$($_.DirectoryName)'. Se omite el renombrado." -ForegroundColor Yellow
        }
    }
}
